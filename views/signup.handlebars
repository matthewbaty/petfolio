<section class="vh-100 background">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-white text-dark" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="md-1 mt-md-4 pb-5">
                            <h2 class="fs-1">Sign up for Petfolio</h2>
                            <img src="css/cat_icon.png" class="img-fluid mb-2" id="icon">

                            <div class="form-outline form-white mb-4">
                                <input type="first_name" id="firstname_form" class="form-control form-control-lg" />
                                <label class="form-label" for="firstname_form">First Name</label>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="last_name" id="lastname_form" class="form-control form-control-lg" />
                                <label class="form-label" for="lastname_form">Last name</label>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="email" id="email_form" class="form-control form-control-lg" />
                                <label class="form-label" for="email_form">Email</label>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" id="password_form" class="form-control form-control-lg" />
                                <label class="form-label" for="password_form">Password</label>
                            </div>

                            <button class="btn btn-dark btn-lg px-5" type="submit" id="signup_btn">Sign-up!</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/signup.js"></script>